#include <fstream> //ofstream or ifstream
#include <iostream>
#include <string>

using namespace std;



int main() {

    bool write = false;

    if (write) {
        ofstream outputFile("writing.txt");
        if (outputFile.is_open()) {

            outputFile << "This is the first line!" << "\n";
            outputFile << "This is a new line!"<< "\n";
            outputFile.close();
            cout << "Successfully written to file." << endl;

        } else {
            cout << "Sorry, this file is locked." << endl;
        }
    } else if (!write) {
        ifstream inputFile("words.txt");
        string line;

        if (inputFile.is_open()) {
            while(getline(inputFile, line)) {
                cout << line << endl;
            }
        }
        inputFile.close();
    }
    return 0;

}
